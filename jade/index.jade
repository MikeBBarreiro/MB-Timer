doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_control.js')
  body(ng-app='mb-timer', ng-controller='MainCtrl')
    .bar.bar-header.bar-dark
      h1.title TimeR

    ion-content.has-header(ng-controller='MainCtrl')

      .row
        .col
          .range
            i.ion-clock
            input(type="range" ng-model='clock', min='0', max='500')
      button.button-full.button-dark(ng-click='start()') Start
      .clock {{clock}} s
